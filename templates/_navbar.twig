{% set home = currentSite.baseUrl %}
{%
  set navbar = [
    {'page': 'Home', 'url': home},
    {'page': 'About', 'url': home~'about'},
  ]
%}

<div class="fixed z-30 w-full text-lg bg-black bg-opacity-60 text-white p-2 md:px-10 md:text-xl lg:px-20 lg:text-2xl">
  <div class="inline float-left cursor-default">{{ siteName }}</div>
  <div class="inline float-right">
    {% for item in navbar %}
      <a class="p-2 align-top text-md md:text-lg lg:text-xl transition duration-300 hover:text-blue-500" href="{{item.url}}">{{item.page}}</a>
    {% endfor %}
  </div>
</div>