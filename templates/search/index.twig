{% extends '_layouts/base' %}


{% set optGenre = craft.categories.group('genre') %}

{% block content %}

  <div class="pt-20 md:pt-24 lg:pt-32 pb-32 md:mx-20 lg:mx-60">
    <div class="shadow-md bg-gray-600 py-6 px-4">
      <h1 class="text-base md:text-lg lg:text-xl text-white mb-6">Advanced Search</h1>
      <form action="{{ url('content') }}">

        <input type="text" name="search" placeholder="Keyword for manga/comic title" class="w-full text-xs md:text-sm lg:text-base sm:w-2/3 px-2 py-0.5 border border-white outline-none">

        <div class="block text-xs md:text-sm lg:text-base my-4 sm:ml-4 sm:inline">
          <label class="text-white py-0.5" for="category">Genre</label>
          <select class="outline-none py-0.5 cursor-pointer" name="category">
            <option value="">Any</option>
            {% for item in optGenre %}
              <option value="{{ item.title }}">{{ item.title }}</option>
            {% endfor %}
          </select>
        </div>

        <button class="block mt-12 px-2 py-0.5 text-xs md:text-sm lg:text-base rounded-md text-white bg-blue-500 hover:bg-blue-600">Submit Search</button>

      </form>
    </div>
  </div>

{% endblock %}