<div class="block">
  <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold">{{ contentBlock.header }}</h1>
  <div class="relative bg-black bg-opacity-80 mt-1 p-1 mx-8 sm:mx-12 md:px-2 md:mx-0 md:p-2 lg:px-4">
    {% for item in items %}
      <div class="absolute z-10 top-0 left-0 bg-black bg-opacity-70 text-center p-1 w-full font-serif font-bold text-white text-lg md:text-xl lg:text-2xl sm:static sm:bg-transparent">
        {{ item.title }}
      </div>
      <div class="sm:flex">

        <div class="bg-black mx-auto w-full sm:w-2/3 md:w-1/3">
          <img class="w-full opacity-80" src="{{ item.coverImage[0].url }}" alt="cover image">
        </div>

        <div x-data="{ tabActive: 1 }" class="absolute z-10 w-full left-0 bottom-0 bg-black bg-opacity-70 text-white pt-2 sm:static sm:bg-transparent">

          <div class="text-sm md:text-base lg:text-lg border-b border-white mb-0.5 lg:mb-6 pl-6 space-x-2 text-left">
            <button @click="tabActive = 1" x-bind:class="{'bg-white text-blue-500': tabActive === 1}" class="tabBtn px-2 py-0.5 hover:bg-white hover:text-black" style="outline: none;">Overview</button>
            <button @click="tabActive = 2" x-bind:class="{'bg-white text-blue-500': tabActive === 2}" class="tabBtn px-2 py-0.5 hover:bg-white hover:text-black" style="outline: none;">Sinopsis</button>
          </div>

          <div class="px-4 pb-10 text-left text-xs md:text-sm lg:text-base">
            <ul x-show="tabActive === 1">
              <h2 class="text-sm md:text-base lg:text-lg border-b border-gray-400 w-1/2 md:w-1/6">Overview</h2>
              <li>Score: &#9734;
                {% if item.score is not null %}
                  {{ item.score }}<span> (Scored by {{ item.scoreBy|currency('USD', stripZeros=true)|replace({'$':''}) }} Users)</span>
                {% else %}
                  n/a
                {% endif %}
              </li>
              <li>Genres:
                {% for genre in item.genre.all() %}

                  {{ genre.title }}
                {% endfor %}
              </li>
            </ul>

            <div x-show="tabActive === 2" class="text-xs md:text-sm lg:text-base">
              <h2 class="text-sm md:text-base lg:text-lg border-b border-gray-400 w-1/2 md:w-1/6">Sinopsis</h2>
              <div style="text-indent: 20px;">{{ item.paragraph|truncate(222)|striptags }}</div>
            </div>
          </div>

          <div class="absolute bottom-2 text-left px-4 py-2 text-xs md:text-sm lg:text-base">
            <a class="border border-white text-white lg:py-0.5 px-4 hover:bg-white hover:text-black" href="{{ item.url }}">More info</a>
          </div>
          
        </div>
      </div>
    {% endfor %}
  </div>
</div>