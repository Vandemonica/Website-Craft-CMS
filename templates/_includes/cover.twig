<a href="{{ content.url }}" class="group text-left relative coverImage bg-gray-300 overflow-hidden {{ margin }}">
  <img class="w-full object-cover" src="{{ item.coverImage[0].url ?? null }}" alt="Cover image">
  <div class="absolute transition duration-300 top-0 left-0 w-full h-full bg-black bg-opacity-50 group-hover:bg-opacity-0">
    <div class="absolute w-full text-xs md:text-sm lg:text-base py-1 text-white bottom-0 px-2 group-hover:text-blue-300 group-hover:bg-black group-hover:bg-opacity-80">
      <p class="font-bold">{{ content.title }}</p>
      <p class="font-sans text-xs md:text-sm lg:text-base">
        <span class="font-bold text-sm md:text-base lg:text-lg">&#9734;</span>
        {% if content.score is not null %}
          {{ content.score }}
        {% else %}
          n/a
        {% endif %}
      </p>
    </div>
  </div>
</a>