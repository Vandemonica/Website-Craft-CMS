  <!-- <div class="absolute w-full -bottom-24 text-center bg-black bg-opacity-90 text-white">
    {% for item in navbar %}
      <a class="block md:hidden" href="{{item.url}}">{{ item.page }}</a>
    {% endfor %}
  </div> -->
  <!-- end mobile -->
</div>


<script src="{{ home }}assets/js/hamburger.js"></script>