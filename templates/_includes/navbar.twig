{% set home = currentSite.baseUrl %}
{% set mobile = 'hidden absolute -bottom-24 text-center bg-black bg-opacity-90 w-full' %}
{% set desktop = 'md:static md:w-auto md:bg-transparent md:inline md:mt-1' %}

{%
  set navbar = [
    {'page': 'Home', 'url': home},
    {'page': 'Search', 'url': home~'search'},
    {'page': 'Genre', 'url': home~'genres'},
    {'page': 'About', 'url': home~'about'},
  ]
%}

<div class="fixed z-30 w-full bg-black bg-opacity-90 text-white py-3">
  <div class="inline italic float-left text-xl md:text-2xl lg:text-3xl pl-2 md:pl-10 lg:pl-20">
    <a class="transition duration-300 hover:text-blue-500" href="{{ home }}">{{ siteName }}</a>
  </div>
  <div id="hamburger" class="hamburger cursor-pointer inline md:hidden mt-1 float-right">
    <span id="hamone"></span>
    <span id="hamtwo"></span>
    <span id="hamthree"></span>
  </div>
  <!-- desktop -->
  <div id="droppy" class="{{ mobile }} {{ desktop }} float-right md:pr-10 lg:pr-20">
    {% for item in navbar %}
      <a class="block md:inline md:p-2 text-base md:text-lg lg:text-xl transition duration-300 hover:text-blue-500" href="{{item.url}}">{{ item.page }}</a>
    {% endfor %}
  </div>
  <!-- end desktop -->

