{% extends '_layouts/base' %}


{% set cat = craft.app.request.queryParam('category') ?? '' %}
{% set search = craft.app.request.queryParam('search') ?? '' %}
{% set category = null %}

{% if cat is not empty %}
  {% set category = craft.categories
    .slug(cat)
    .one()
  %}
{% endif %}

{% set postQuery = craft.entries
  .section('contentPosts')
  .with(['coverImage'])
  .relatedTo(category)
  .search(search)
  .limit(3)
%}

{% block content %}

  <div class="bg-gray-700 pb-4 px-2 md:px-4 lg:px-6 pt-20">
    {% include "_includes/search-bar" %}
    {% if search is not empty %}
      <div class="text-gray-300 my-2 text-sm md:text-base lg:text-lg">
        Search result for: {{ '"' ~ search ~ '"' }}, {{ postQuery|length }} title found
      </div>
    {% endif %}
  </div>

  {% paginate postQuery as posts %}

  {% if postQuery|length and not (craft.app.request.queryParam('page') > paginate.totalPages) %}

    <div class="flex justify-center mx-auto">
      <div class="grid md:grid-cols-3 gap-x-12 gap-y-12 justify-between mx-4">
        {% for item in posts %}
          {% set img = item.coverImage[0] ?? null %}
          {%
            include "_includes/cover" with{
              'content': item,
              'cover': img,
              'margin': 'm-auto',
            }
          %}
        {% endfor %}
      </div>
    </div>

    <div class="mt-6 text-center space-x-2">
      {% include "_includes/pagination" %}
    </div>

  {% elseif postQuery|length == 0 %}

    {% include '_includes/minicard' with{'message': "Sorry, but There's are no titles match with your search"} %}

  {% else %}

    {% include '_includes/minicard' with{'message': "Its look like something went wrong"} %}

  {% endif %}


{% endblock %}